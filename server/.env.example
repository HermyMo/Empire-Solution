# Gmail SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=youremail@gmail.com
SMTP_PASS=your_16_char_app_password_here
FROM_EMAIL=SafeSupport <youremail@gmail.com>

# Disable email file fallback (set to false to force real SMTP only)
EMAIL_FALLBACK_TO_FILE=false

# JWT Secret (change this in production!)
JWT_SECRET=your-secret-key-change-in-production

# Optional: Frontend URL (for email verification links)
APP_URL=http://localhost:5173

# Optional: Control alert behavior during development
# If true, allow unauthenticated alerts (NOT recommended in production)
ALLOW_PUBLIC_ALERTS=false
# If true, allow alerts for unverified users (NOT recommended in production)
ALLOW_UNVERIFIED_ALERTS=false

# SMS Provider Configuration (choose ONE provider and fill in credentials)

# Twilio
TWILIO_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM=+1234567890

# Vonage (formerly Nexmo)
VONAGE_API_KEY=your_vonage_api_key
VONAGE_API_SECRET=your_vonage_api_secret
VONAGE_FROM=YourBrand

# Africa's Talking
AT_USERNAME=your_at_username
AT_API_KEY=your_at_api_key
AT_FROM=YourBrand

# Disable SMS file fallback (set to false to force real SMS only)
SMS_FALLBACK_TO_FILE=false